    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Photogrammetry_Processing"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" RequestedTheme="Light">
        <SplitView HorizontalAlignment="Left" Height="1000" VerticalAlignment="Top" Width="438">
            <SplitView.Pane>
                <Grid/>
            </SplitView.Pane>
            <Grid RequestedTheme="Dark" Background="#FF291E1E">
                <TextBlock x:ConnectionId='2' HorizontalAlignment="Left" Margin="10,10,0,0" Text="Photos library:" TextWrapping="Wrap" VerticalAlignment="Top"                                               FontSize="50"/>
            </Grid>
        </SplitView>
        <Button x:ConnectionId='1' Content="Load Photos" HorizontalAlignment="Left" Height="73" Margin="486,121,0,0" VerticalAlignment="Top" Width="217"                     />
    </Grid>
</Page>

